@model List<Animal>
@if (TempData["Success"] != null)
{
    <table class="table table-bordered bg-success">
        <tr><th>@TempData["Success"]</th></tr>
    </table>
}
<div class="container">
    <div class="row text-center"><h3>Requests</h3></div><hr />
    @if(Model == null){<tr><td>Request is not found</td></tr>}
    <table class="table table-bordered">
        <tr>
            <th>Customer Name</th>
            <th>Image</th>
            <th>Animal Name</th>
            <th>Age</th>
            <th>Features</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var animal in Model)
        {
            if (animal.isRequest == true && animal.Status == false)
            {
                <tr>
                    <td>@animal.Recipient</td>
                    <td><img src="@animal.ImageURL" width="100px"/></td>
                    <td>@animal.Name</td>
                    <td>@animal.Age</td>
                    <td><details><summary>Click For Animal Features</summary>@animal.Features</details></td>
                    <td>@animal.AnimalType.Name</td>

                    <td class="bg-success"><a asp-controller="Animal" asp-action="AcceptReq" asp-route-id="@animal.Id" type="button" class="btn btn-success text-white">Accept</a></td>
                    <td class="bg-danger"><a asp-controller="Animal" asp-action="DeclineReq" asp-route-id="@animal.Id" type="button" class="btn btn-danger text-white">Decline</a></td>

                    @*
                    <td><a asp-controller="Animal" asp-action="AcceptRequest" asp-route-id="@animal.Id" type="button" class="btn">Accept</a></td>
                    <td><a asp-controller="Animal" asp-action="DeclineRequest" asp-route-id="@animal.Id" type="button" class="btn">Decline</a></td>
                    *@
                </tr>
            }
        }

    </table>
</div>