@using HayvanBarinagi.Utility;
@model List<Animal>
@if (TempData["Success"] != null)
{
    <table class="table table-bordered bg-success text-white">
        <tr><th>@TempData["Success"]</th></tr>
    </table>
}
<div class="container">
    <div class="row text-center"><h3>Animals</h3></div><hr />
    <table class="table table-bordered">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Age</th>
            <th>Features</th>
            <th>Type</th>
            @if (User.IsInRole(UserRoles.Role_Admin))
            {
                <th></th>
                <th></th>
            }
            @if (User.IsInRole(UserRoles.Role_Customer))
            {
                <th></th>
            }
        </tr>
        @foreach (var animal in Model)
        {
            if (animal.isRequest == false && animal.Status == false)
            {
                <tr>
                    <td><img src="@animal.ImageURL" width="100px"/></td>
                    <td>@animal.Name</td>
                    <td>@animal.Age</td>
                    <td><details><summary>Click For Animal Features</summary>@animal.Features</details></td>
                    <td>@animal.AnimalType.Name</td>
                    @if (User.IsInRole(UserRoles.Role_Admin))
                    {
                        <td class="bg-primary"><a asp-controller="Animal" asp-action="AddOrUpdateAnimal" asp-route-id="@animal.Id" type="button" class="btn btn-primary text-white">Edit</a></td>

                        <td class="bg-danger"><a asp-controller="Animal" asp-action="DeleteAnimal" asp-route-id="@animal.Id" type="button" class="btn btn-danger text-white">Delete</a></td>
                    }
                    @if (User.IsInRole(UserRoles.Role_Customer))
                    {
                        <td class="bg-success"><a asp-controller="Animal" asp-action="CreateRequest" asp-route-id="@animal.Id" type="button" class="btn btn-success text-white">Create Request</a></td>
                    }
                </tr>
            }
        }

    </table>
    @if (User.IsInRole(UserRoles.Role_Admin))
    {
        <div class="row col-md-4 mx-auto ">
            <a asp-controller="Animal" asp-action="AddOrUpdateAnimal" class="btn btn-success text-white" type="button">Add New Animal</a>
        </div>
    }
</div>