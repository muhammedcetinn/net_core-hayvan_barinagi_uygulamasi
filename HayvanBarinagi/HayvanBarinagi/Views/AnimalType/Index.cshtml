@model List<AnimalType>
@if(TempData["Success"] != null)
{
    <table class="table table-bordered bg-success">
        <tr><th>@TempData["Success"]</th></tr>
    </table>
}
<div class="container">
    <div class="col-md-6 mx-auto my-3">
        <div class="row text-center"><h3>@_localization.Getkey("str_AnimalTypes")</h3></div><hr />
        <table class="table">
            <tr>
                <th class="bg-dark text-white">@_localization.Getkey("str_Type")</th>
                <th class="bg-dark"></th>
                <th class="bg-dark "></th>
            </tr>
            @foreach (var animalType in Model)
            {
                <tr>
                    <td class="bg-secondary text-white">
                        @if (Thread.CurrentThread.CurrentCulture.Name.ToString() == "en-US")
                        {
                            @animalType.NameEN
                        }else{
                            @animalType.NameTR
                        }
                        
                    </td>
                    <td class="bg-primary"><a asp-controller="AnimalType" asp-action="EditType" asp-route-id="@animalType.Id" type="button" class="btn btn-primary text-white">@_localization.Getkey("str_EditType")</a></td>
                    <td class="bg-danger"><a asp-controller="AnimalType" asp-action="DeleteType" asp-route-id="@animalType.Id" type="button" class="btn btn-danger text-white">@_localization.Getkey("str_DeleteType")</a></td>
                </tr>
            }

        </table>
        <div class="row">
            <a asp-controller="AnimalType" asp-action="AddNewType" class="btn btn-success text-white" type="button">@_localization.Getkey("str_AddType")</a>
        </div>
    </div>   
    
</div>