@model List<AnimalType>
@if(TempData["Success"] != null)
{
    <table class="table table-bordered bg-success">
        <tr><th>@TempData["Success"]</th></tr>
    </table>
}
<div class="container">
    <div class="col-md-6 mx-auto my-3">
        <div class="row text-center"><h3>Animal Type</h3></div><hr />
        <table class="table table-bordered">
            <tr>
                <th class="bg-dark text-white">Type-Name</th>
                <th class="bg-dark"></th>
                <th class="bg-dark "></th>
            </tr>
            @foreach (var animalType in Model)
            {
                <tr>
                    <td class="bg-secondary text-white">@animalType.Name</td>
                    <td class="bg-primary"><a asp-controller="AnimalType" asp-action="EditType" asp-route-id="@animalType.Id" type="button" class="btn btn-primary text-white">Edit</a></td>
                    <td class="bg-danger"><a asp-controller="AnimalType" asp-action="DeleteType" asp-route-id="@animalType.Id" type="button" class="btn btn-danger text-white">Delete</a></td>
                </tr>
            }

        </table>
        <div class="row">
            <a asp-controller="AnimalType" asp-action="AddNewType" class="btn btn-success text-white" type="button">Add A New Animal Type</a>
        </div>
    </div>   
    
</div>