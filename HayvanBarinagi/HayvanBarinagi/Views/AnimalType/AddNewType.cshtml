@model AnimalType

<form method="post">
    <div class="container">
        <div class="row text-center mt-3"><h3>@_localization.Getkey("str_AddType")</h3></div><hr />
        <div class="row col-md-3 mx-auto my-3 mt-4">
            <label asp-for="NameTR" class="pb-1">@_localization.Getkey("str_Name") - TR</label>
            <input asp-for="NameTR" class="form-control" />
            <span asp-validation-for="NameTR" class="text-primary"></span>
        </div>
        <div class="row col-md-3 mx-auto my-3 mt-4">
            <label asp-for="NameEN" class="pb-1">@_localization.Getkey("str_Name") - ENG</label>
            <input asp-for="NameEN" class="form-control" />
            <span asp-validation-for="NameEN" class="text-primary"></span>
        </div>
        <div class="row col-md-3 mx-auto my-3">
            <button type="submit" class="btn btn-primary text-white">@_localization.Getkey("str_AddType")</button>
        </div>
        <div class="row col-md-3 mx-auto m-4">
            <a asp-controller="AnimalType" asp-action="Index" class="btn btn-danger text-white">@_localization.Getkey("str_BackToTable")</a>
        </div>
    </div>
</form>

